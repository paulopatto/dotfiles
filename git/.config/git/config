# vim: ft=gitconfig
# ~/.config/git/config
# https://git-scm.com/docs/git-config#_environment
[user]
  name        = Paulo Patto
  email       = paulopatto@paulopatto.com
  username    = paulopatto
  signingkey  = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIJBu79W/czszkGHPfVK+rvOjQNkJeoQIv/qUM2i4rz9E

[gpg]
  format = ssh

[include]
  path = ~/.gitconfig-ssh

[commit]
  gpgsign = true

[init]
	defaultBranch = main

[core]
  excludesfile = ~/.config/git/gitignore_global
  editor       = nvim

[github]
  user  = paulopatto

[push]
  default = current # simple | current | matching

[apply]
  whitespace = fix

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  new  = green bold

[grep]
  linenumber = true

[merge]
  log = true

[alias]
  m  = "merge --no-ff"
  st = status -sb
  ci = commit -S -v
  update = "pull --rebase"
  view  = "log --graph --pretty=format:'%C(yellow)%H%C(red)%d%n%C(reset)%C(blue)%an <%ae>%n%C(cyan)%aD (%ar)%C(reset)%n%+B'"
  l     = "log --graph --topo-order  --pretty=format:'%C(yellow)%H%C(red)%d%n%C(reset)%C(blue)%an <%ae>%n%C(cyan)%aD (%ar)%C(reset)%n%+B'"
  lg    = "log --graph --all --pretty=format:'%Cred%h%Creset - %Cgreen(%cr)%Creset %s%C(yellow)%d%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
  graph = "log --graph --all --pretty=format:'%Cred%h%Creset - %Cgreen(%cr)%Creset %s%C(yellow)%d%Creset' --abbrev-commit --date=relative"
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
